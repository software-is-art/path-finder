#!/bin/bash
# PathFinder LISP pre-commit hook

set -e

echo "ğŸš€ PathFinder LISP Pre-commit Checks"
echo "===================================="

# Check if devbox is available
if ! command -v devbox &> /dev/null; then
    echo "âŒ devbox not found. Please install devbox first."
    exit 1
fi

# Format check
echo "ğŸ“ Checking code formatting..."
if ! devbox run check-fmt; then
    echo "âŒ Code formatting issues found. Run 'devbox run fmt' to fix."
    exit 1
fi

# Linting
echo "ğŸ” Running static analysis..."
if ! devbox run lint; then
    echo "âŒ Linting failed. Please fix the issues above."
    exit 1
fi

# Tests
echo "ğŸ§ª Running tests..."
if ! devbox run test; then
    echo "âŒ Tests failed. Please fix failing tests."
    exit 1
fi

# Build check
echo "ğŸ”¨ Checking build..."
if ! devbox run build; then
    echo "âŒ Build failed. Please fix compilation errors."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"